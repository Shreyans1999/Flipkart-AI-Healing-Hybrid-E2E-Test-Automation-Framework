{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "paths": {
            "@pages/*": [
                "pages/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@ai/*": [
                "ai/*"
            ],
            "@core/*": [
                "core/*"
            ],
            "@config/*": [
                "config/*"
            ],
            "@locators/*": [
                "locators/*"
            ],
            "@tests/*": [
                "tests/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "reports"
    ]
}